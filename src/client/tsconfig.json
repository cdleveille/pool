{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "../../build",
    "lib": ["es2019", "dom"],
    "rootDir": "../",
    "types": [],
    "paths": {
      "*": ["../../node_modules/*"],
      "@shared": ["../shared"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/server/*"],
  "references": [
    {
      "path": "../shared"
    }
  ]
}
